<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
        <ImageView
            android:id="@+id/imageViewQuizz"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/geography"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textViewQuizz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:text="Địa lý"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imageViewQuizz"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewQuizz"
            android:layout_toRightOf="@id/imageViewQuizz"
            android:text="Các câu hỏi về vùng đất, địa hình, dân cư và các hiện tượng trên Trái Đất"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="10dp"/>

</RelativeLayout>